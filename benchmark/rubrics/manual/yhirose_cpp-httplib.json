      },
      "timeout": 10,
      "score": 1,
      "category": "structure"
    },
    {
      "id": "test_example_files_exist",
      "type": "run_command",
      "params": {
        "command": "[ -f \"example/server.cc\" ] && [ -f \"example/client.cc\" ] && [ -f \"example/hello.cc\" ]"
      },
      "timeout": 10,
      "score": 1,
      "category": "structure"
    },
    {
      "id": "test_benchmark_files_exist",
      "type": "run_command",
      "params": {
        "command": "[ -d \"benchmark\" ] && [ \"$(ls -A benchmark 2>/dev/null)\" ]"
      },
      "timeout": 10,
      "score": 1,
      "category": "structure"
    }
  ]
